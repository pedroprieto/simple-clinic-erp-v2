{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "PatientModel",
  "type": "object",
  "required": ["givenName", "familyName", "taxID", "telephone", "email"],
  "properties": {
    "givenName": {
      "type": "string",
      "title": "Nombre"
    },
    "familyName": {
      "type": "string",
      "title": "Apellidos"
    },
    "taxID": {
      "type": "string",
      "title": "NIF"
    },
    "telephone": {
      "type": "telephone",
      "title": "Teléfono"
    },
    "address": {
      "type": "address",
      "title": "Dirección"
    },
    "email": {
      "type": "email",
      "title": "Email"
    },
    "birthDate": {
      "type": "date",
      "title": "Fecha de nacimiento"
    },
    "diagnosis": {
      "type": "string",
      "title": "Diagnóstico principal"
    },
    "description": {
      "type": "string",
      "title": "Observaciones"
    }
  }
}
